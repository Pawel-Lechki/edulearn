---
import Layout from "../layouts/Layout.astro";
import registerImage from "../assets/reqister.svg";
import RegisterForm from "../components/RegisterForm";
---
<Layout title="Rejestracja" description="Rejestracja do platformy kursów Edulearn">
  <div class="container mx-auto p-4 mt-20">
  <div class="grid grid-cols-2 gap-4">
    <div>
      <img class="h-auto max-w-full rounded-lg" src={registerImage.src} alt="">
    </div>
    <div class="flex flex-col justify-center text-center">
      <h3 class="text-5xl font-bold mb-10">Zarejestruj się i rozpocznij naukę</h3>
      <RegisterForm client:only/>
    </div>
  </div>
  </div>
</Layout>